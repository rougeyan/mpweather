@charset "UTF-8";
@import "../../asset/css/iconfont.wxss"; 
@import "../../asset/css/resetnative.wxss"; 
/**index.wxss**/
.bg {
  height: 100vh;
  /* background-repeat: no-repeat;
  background-size: cover; */
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1; }

.blue {
  background-color: cyan; }

.pink {
  background-color: pink; }

.container {
  height: 100vh;
  overflow: hidden;
  background-color: skyblue; }

.userinfo {
  height: 80rpx;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  font-size: 32rpx; }
  .userinfo .userinfo-avatar {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx; }

.container .swiper-wrap {
  position: relative;
  border: 1rpx solid #000;
  border-radius: 8rpx;
  margin-bottom: 12rpx; }

.swiper-wrap .add-user-citys {
  position: absolute;
  bottom: 4rpx;
  left: 4rpx;
  font-size: 40rpx;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  overflow: hidden;
  background: aqua;
  font-size: 32rpx; }

.swiper-wrap .weatherSwiper {
  /* swiper位置是固定的 需要定义高度;*/
  height: 360rpx; }

.swiper-item {
  padding-top: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative; }
  .swiper-item .address {
    display: block;
    padding: 12rpx 16rpx;
    font-size: 32rpx;
    color: #000;
    box-sizing: border-box; }
  .swiper-item .summary {
    font-size: 28rpx;
    padding: 10rpx; }
  .swiper-item .temp {
    font-size: 120rpx;
    color: #fff; }
    .swiper-item .temp .fuhao {
      font-size: 36rpx;
      vertical-align: super; }
  .swiper-item .update-time {
    position: absolute;
    bottom: 28rpx;
    right: 32rpx;
    font-size: 24rpx; }

.detail-wrap {
  height: calc(100vh - 488rpx); }

.tmp-status {
  display: flex;
  justify-content: space-between;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #000; }
  .tmp-status .tmp text {
    padding-right: 24rpx;
    display: inline-block;
    vertical-align: top; }
  .tmp-status .tmp .max {
    position: relative; }
    .tmp-status .tmp .max:after {
      content: "";
      position: absolute;
      top: 4rpx;
      right: 11.5rpx;
      width: 1rpx;
      height: 32rpx;
      background-color: #000; }

/* 逐三小时预报 */
.hourly-wrap {
  height: 160rpx;
  width: unset;
  white-space: nowrap;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid #000; }
  .hourly-wrap .item-hour {
    width: 116rpx;
    height: 100%;
    display: inline-block;
    vertical-align: top; }

.hourlyWeather {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%; }
  .hourlyWeather .rainpop {
    display: block;
    font-size: 20rpx;
    width: 100%;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center; }

/* 未来天气预报 */
.fulture {
  border: 1px solid #000; }

.fulture-item {
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center; }
  .fulture-item .weekitem {
    width: 200rpx; }
  .fulture-item .weather-Icon-pop {
    flex: 1; }
    .fulture-item .weather-Icon-pop .iconfont {
      display: block;
      height: 52rpx;
      text-align: center; }
    .fulture-item .weather-Icon-pop .rainpop {
      height: 20rpx;
      line-height: 20rpx;
      font-size: 20rpx;
      text-align: center; }
  .fulture-item .max-tmp {
    width: 100rpx;
    font-size: 36rpx;
    text-align: center; }
  .fulture-item .min-tmp {
    width: 100rpx;
    font-size: 36rpx;
    text-align: center; }
