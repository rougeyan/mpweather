.userCityItem {
  height: 100rpx;
  position: relative;
  border: 1rpx solid #333; }

.city-msg {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 5;
  height: 100%;
  background: green;
  width: 100%;
  transition: all 0.3s linear; }
  .city-msg .name {
    flex: 1;
    font-size: 36rpx;
    margin-right: 40rpx; }
    .city-msg .name .nametext {
      display: -webkit-box;
      overflow: hidden;
      text-overflow: ellipsis;
      word-break: break-all;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2; }
  .city-msg .temp {
    font-size: 60rpx;
    line-height: 1; }
    .city-msg .temp .symblo {
      font-size: 36rpx;
      vertical-align: super; }

.deleteCity {
  z-index: 4;
  background-color: #f55;
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 120rpx;
  line-height: 100rpx;
  text-align: center; }

.city-footer {
  text-align: right; }
  .city-footer .text {
    font-size: 40rpx;
    vertical-align: sub; }
  .city-footer .iconfont {
    font-size: 56rpx;
    vertical-align: middle; }
