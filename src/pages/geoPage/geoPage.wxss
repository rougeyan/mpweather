/* pages/geolocate.wxss */
.geo-container {
  position: relative; }
  .geo-container .letter-side-bar {
    position: fixed;
    top: 80rpx;
    right: 0;
    background-color: #fff;
    color: #333;
    height: 100vh;
    width: 30rpx;
    z-index: 10;
    text-align: center; }
    .geo-container .letter-side-bar .letter-item {
      color: #333; }
      .geo-container .letter-side-bar .letter-item.active {
        color: #fff;
        background-color: #ccc; }
  .geo-container .city-list-wrapper {
    height: calc(100vh - 80rpx); }

.search-block {
  height: 80rpx;
  background-color: #fff; }
  .search-block .search-bar {
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    z-index: 5;
    position: relative;
    background-color: #fff; }
    .search-block .search-bar:after {
      content: "";
      width: 100%;
      height: 1rpx;
      position: absolute;
      right: 0;
      bottom: 0;
      background: #b2b2b2; }
    .search-block .search-bar .search-input-wrap {
      flex: 1;
      border: 1px solid #ddd;
      height: 56rpx;
      border-radius: 12rpx;
      padding-left: 60rpx;
      position: relative;
      background-color: #e8e8e8; }
      .search-block .search-bar .search-input-wrap .search-input {
        padding-right: 60rpx;
        height: 100%;
        display: block; }
      .search-block .search-bar .search-input-wrap .iconfont {
        position: absolute;
        top: 2rpx;
        left: 10rpx;
        color: #999;
        font-size: 36rpx; }
    .search-block .search-bar .search-btn {
      text-align: center;
      color: #1aad16;
      height: 100%;
      line-height: 80rpx;
      padding-left: 20rpx;
      display: none; }
      .search-block .search-bar .search-btn.active {
        display: block; }
  .search-block .search-mask {
    height: 100vh;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 3;
    position: absolute;
    top: 0;
    left: 0;
    display: none; }
    .search-block .search-mask.active {
      display: block; }
  .search-block .search-result-list {
    z-index: 5;
    background-color: #fff;
    position: relative;
    height: 42vh; }
    .search-block .search-result-list .search-result-item {
      padding: 6rpx 36rpx;
      position: relative; }
      .search-block .search-result-list .search-result-item:after {
        content: "";
        width: 100%;
        height: 1rpx;
        position: absolute;
        right: 0;
        bottom: 0;
        background: #b2b2b2; }
      .search-block .search-result-list .search-result-item:last-child {
        padding-bottom: 20rpx; }
      .search-block .search-result-list .search-result-item text {
        display: block; }
      .search-block .search-result-list .search-result-item .title {
        font-size: 28rpx;
        color: #333;
        font-weight: 600;
        margin-bottom: 4rpx; }
      .search-block .search-result-list .search-result-item .area {
        font-size: 20rpx;
        color: #999;
        margin-bottom: 4rpx; }
      .search-block .search-result-list .search-result-item .address {
        font-size: 24rpx;
        color: #666;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden; }
  .search-block .search-no-result-list {
    z-index: 5;
    background-color: #fff;
    position: relative;
    display: none;
    padding: 18rpx 36rpx; }
    .search-block .search-no-result-list.active {
      display: block; }

.city-list-wrapper .city-list-letter {
  background-color: #ccc;
  padding-left: 36rpx;
  font-size: 32rpx;
  font-weight: 600rpx; }

.city-list-wrapper .city-list-item {
  padding: 18rpx 36rpx;
  position: relative;
  overflow: hidden; }
  .city-list-wrapper .city-list-item:after {
    content: "";
    width: 100%;
    height: 1rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    background: #b2b2b2; }
